@model ManageMyTeam.Models.BaseLoad

@{
    ViewData["Title"] = "Create";
}

<h1>Neue Grundlast</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Grundlast</label>
                <input asp-for="BaseLoadTitle" class="form-control" />
                <span asp-validation-for="BaseLoadTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Stunden pro Woche</label>
                <input asp-for="BaseLoadAmount" class="form-control" />
                <span asp-validation-for="BaseLoadAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Mitarbeiter</label>
                <select asp-for="EmployeeId" class ="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Anlegen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zurück zur Übersicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
