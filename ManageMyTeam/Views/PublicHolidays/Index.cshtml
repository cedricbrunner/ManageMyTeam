@model IEnumerable<ManageMyTeam.Models.PublicHoliday>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Feiertag erfassen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Feiertag
            </th>
            <th>
                Datum
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PublicHolidayTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicHolidayDate) 
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PublicHolidayId">Bearbeiten</a> |
                <a asp-action="Details" asp-route-id="@item.PublicHolidayId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PublicHolidayId">Löschen</a>
            </td>
        </tr>
}
    </tbody>
</table>
