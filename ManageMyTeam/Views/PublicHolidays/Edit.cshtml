@model ManageMyTeam.Models.PublicHoliday

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PublicHoliday</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PublicHolidayId" />
            <div class="form-group">
                <label>Feiertag</label>
                <input asp-for="PublicHolidayTitle" class="form-control" />
                <span asp-validation-for="PublicHolidayTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Datum</label>
                <input asp-for="PublicHolidayDate" class="form-control" type="date" />
                <span asp-validation-for="PublicHolidayDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Standort</label>
                <select asp-for="SiteId" class="form-control" asp-items="ViewBag.SiteId"></select>
                <span asp-validation-for="SiteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zurück zur Übersicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
