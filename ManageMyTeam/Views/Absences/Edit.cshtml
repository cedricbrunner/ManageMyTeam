@model ManageMyTeam.Models.Absence

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Absence</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AbsenceId" />
            <div class="form-group">
                <label>Grund</label>
                <input asp-for="AbcenceName" class="form-control" />
                <span asp-validation-for="AbcenceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Von</label>
                <input asp-for="AbcenceStart" class="form-control" type="date"/>
                <span asp-validation-for="AbcenceStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Bis</label>
                <input asp-for="AbcenceEnd" class="form-control" type="date"/>
                <span asp-validation-for="AbcenceEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Mitarbeiter</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zurück zur Übersicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
